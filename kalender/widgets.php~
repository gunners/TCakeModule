<?php

$hl = (isset($_POST["hl"])) ? $_POST["hl"] : false;
if(!defined("L_LANG") || L_LANG == "L_LANG")
{
	if($hl) define("L_LANG", $hl);

	else define("L_LANG", "id_ID"); 
}

$mydate = isset($_POST["date1"]) ? $_POST["date1"] : "";

require(HOSTNAME.PLUGIN.'kalender/calendar/tc_calendar.php');

	  $myCalendar = new tc_calendar("date1");
	  $myCalendar->setIcon(HOSTNAME.PLUGIN."kalender/calendar/images/iconCalendar.gif");
	  $myCalendar->setDate(date('d'), date('m'), date('Y'));
	  $myCalendar->setPath(HOSTNAME.PLUGIN."kalender/calendar/");
	  $myCalendar->setYearInterval(1970, 2020);
	  $myCalendar->dateAllow('2008-05-13', '2015-03-01', false);
    $myCalendar->disabledDay("sat,sun");
	  $myCalendar->setSpecificDate(array("2011-04-01", "2011-04-14", "2011-04-25"), 0, 'month');
	  $myCalendar->writeScript();
	  ?>

